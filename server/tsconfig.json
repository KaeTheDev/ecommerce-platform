{
    // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
      "target": "es2020",                  
      "jsx": "preserve",
      "module": "commonjs",
      "rootDir": "./src",                    
      "outDir": "./dist",
      "allowJs": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "client"]
}